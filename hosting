from flask import Flask, request, jsonify
from dqn_chess_app import train

app = Flask(__name__)

@app.route('/train', methods=['POST'])
def train_agent():
    episodes = request.json.get('episodes', 10)
    train(episodes=episodes)  # You may want to modify train() to return stats
    return jsonify({'status': 'training complete', 'episodes': episodes})

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5000)
